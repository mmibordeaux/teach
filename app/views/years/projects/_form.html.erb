<%= simple_form_for [@year, @project] do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :label %>
      <%= f.input :sublabel %>
      <%= f.input :year_id, as: :hidden %>
      <%= f.association :user, label: 'Responsable' %>
      <%= f.input :description, input_html: { rows: 5 } %>
      <%= f.input :detailed_description, input_html: { rows: 15 } %>
      <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
    </div>
    <div class="col-md-4">
      <%= f.input :position, label: 'N° de semaine (début de l\'atelier)' %>
      Soit le <%= l @project.from if @project.from %>.
      <%= f.input :to, label: 'Fin de l\'atelier', html5: true %>
      <%= f.association :semesters, as: :check_boxes, label: 'Semestres' %>
    </div>
    <div class="col-md-4">
      <%= f.association :users, as: :check_boxes, label: 'Personnes impliquées'  %>
      <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
