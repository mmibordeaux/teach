<% content_for :title, 'Services' %>
<h1>Services</h1>
<table class="table table-hover">
  <tbody>
    <tr>
      <td>Heures enseignant planifi√©es</td>
      <td><%= @teacher_hours.round %></td>
    </tr>
    <tr>
      <td>dont titulaires</td>
      <td><%= @tenured_teacher_hours.round %></td>
    </tr>
    <tr>
      <td>dont vacataires</td>
      <td><%= @untenured_teacher_hours.round %></td>
    </tr>
  </tbody>
</table>

<table class="table table-hover">
  <thead>
    <tr>
      <th style="min-width: 200px">Nom</th>
      <th>Heures</th>
      <th>Service</th>
      <th>Delta heures / service</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% next if user.no_hours? %>
      <tr>
        <td><%= link_to user, user %></td>
        <td><%= user.teacher_hours %></td>
        <td><%= user.hours %></td>
        <td class="<%= user.hours_filled? ? '' : 'hours-warning' %>"><%= user.hours_delta %></td>
      </tr>
    <% end %>
  </tbody>
</table>
